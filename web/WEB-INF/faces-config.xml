<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">
	
	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
		<locale-config>
			<default-locale>en_US</default-locale>
		</locale-config>
		<resource-bundle>
			<base-name>ResourceBundle</base-name>
			<var>bundle</var>
	   	</resource-bundle>
	   	<message-bundle>MessageBundle</message-bundle>
  	</application>
  	
	<converter>
		<display-name>UppercaseConverter</display-name>
		<converter-id>uppercaseConverter</converter-id>
		<converter-class>org.mysat.faces.beans.converters.UppercaseConverter</converter-class>
	</converter>
	
	<navigation-rule>
		<display-name>ANY PAGE</display-name>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-action>#{personaFisicaMBean.loadDashboard}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/faces/persona-fisica.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{estudianteMBean.loadDashboard}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/faces/estudiante.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>logout</from-outcome>
			<to-view-id>/faces/login.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{deduccionMBean.loadDashboard}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/faces/deduccion.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<validator>
		<display-name>RfcValidator</display-name>
		<validator-id>rfcValidator</validator-id>
		<validator-class>org.mysat.faces.validators.RfcValidator</validator-class>
	</validator>
	
	<validator>
		<display-name>NombreApellidoValidator</display-name>
		<validator-id>nombreApellidoValidator</validator-id>
		<validator-class>org.mysat.faces.validators.NombreApellidoValidator</validator-class>
	</validator>
	
	<validator>
		<display-name>CurpValidator</display-name>
		<validator-id>curpValidator</validator-id>
		<validator-class>org.mysat.faces.validators.CurpValidator</validator-class>
	</validator>
	
	<validator>
		<display-name>DeduccionValidator</display-name>
		<validator-id>deduccionValidator</validator-id>
		<validator-class>org.mysat.faces.validators.DeduccionValidator</validator-class>
	</validator>

</faces-config>
